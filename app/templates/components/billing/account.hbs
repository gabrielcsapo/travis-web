{{#if this.isLoading}}
  <LoadingIndicator/>
{{else}}
  <section class="billing">
    {{#if this.isEducation}}
      <Billing::Education
        @account={{this.account}}
        @selectedPlan={{this.selectedPlan}}
        @subscription={{this.subscription}}
        @newSubscription={{this.newV2Subscription}}
      />
    {{/if}}
    {{#if this.isManual}}
      <BillingManual
        @subscription={{this.subscription}}
        @account={{this.account}}
        @selectedPlan={{this.selectedPlan}}
      />
    {{/if}}
    {{#if (or this.isManaged this.hasV2Subscription)}}
      <Billing::Subscription
        @selectedPlan={{this.selectedPlan}}
        @showPlansSelector={{this.showPlansSelector}}
        @showAddonsSelector={{this.showAddonsSelector}}
        @account={{this.account}}
      />
    {{/if}}
    {{#if this.isTrial}}
      <Billing::Trial
        @account={{this.account}}
        @selectedPlan={{this.selectedPlan}}
        @newSubscription={{this.newV2Subscription}}
      />
    {{/if}}
  </section>
  {{#if this.showInvoices}}
    {{#if this.hasV2Subscription}}
      <Billing::Invoices
        @account={{this.account}}
        @invoices={{this.invoices}}
        @subscription={{this.v2subscription}}
      />
    {{else}}
      <Billing::Invoices
        @account={{this.account}}
        @invoices={{this.invoices}}
        @subscription={{this.subscription}}
      />
    {{/if}}
  {{/if}}
{{/if}}
